<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>webApp.oss</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:context/log/log4j1.2.12.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:context/service/focus3d-context.xml</param-value>
	</context-param>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>
			com.focustech.oss2008.acegi.filter.EncodingFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- OpenSessionInView Filters -->
	<filter>
		<filter-name>OpenSessionInView</filter-name>
		<filter-class>
			com.focustech.oss2008.web.filter.OssOpenSessionInViewFilter
		</filter-class>
		<init-param>
			<param-name>sessionFactoryBeanName</param-name>
			<param-value>ossSessionFactory</param-value>
		</init-param>
		<init-param>
			<param-name>enablePerformanceLog</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>enableParameterLog</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>valve</param-name>
			<param-value>8000</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>OpenSessionInView</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>OpenSessionInView</filter-name>
		<url-pattern>*.ui</url-pattern>
	</filter-mapping>
	<filter-mapping>
        <filter-name>OpenSessionInView</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
 	<filter-mapping>
		<filter-name>OpenSessionInView</filter-name>
		<url-pattern>/remoting/*</url-pattern>
	</filter-mapping>
	<!-- Acegi Filters -->
	<filter>
		<filter-name>Acegi Filter Chain Proxy</filter-name>
		<filter-class>
			org.acegisecurity.util.FilterToBeanProxy
		</filter-class>
		<init-param>
			<param-name>targetClass</param-name>
			<param-value>
				org.acegisecurity.util.FilterChainProxy
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Acegi Filter Chain Proxy</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Acegi Filter Chain Proxy</filter-name>
		<url-pattern>*.ui</url-pattern>
	</filter-mapping>
	<filter-mapping>
        <filter-name>Acegi Filter Chain Proxy</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>


	<listener>
		<listener-class>
			org.springframework.web.util.IntrospectorCleanupListener
		</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			com.focustech.uitool.list.servlet.UIToolRequesetListenerImpl
		</listener-class>
	</listener>
	<servlet>
		<servlet-name>spring_mvc</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath:/context/servlet/focus3d-servlet.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>remoting_hessian</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath:/context/service/remoting_hessian.xml
			</param-value>
		</init-param>
	</servlet>
	<!-- =================================================================== -->
	<servlet>
		<servlet-name>systemInitServlet</servlet-name>
		<servlet-class>
			com.focustech.uitool.framework.servlet.SystemInitServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>
			com.focustech.uitool.framework.servlet.NLBaseServlet
		</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/config/struts-config.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>XlsFile</servlet-name>
		<servlet-class>
			com.focustech.uitool.list.servlet.DownloadXlsFile
		</servlet-class>
	</servlet>
	<!-- =================================================================== -->
	<servlet-mapping>
		<servlet-name>spring_mvc</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ShowValidateImage</servlet-name>
		<servlet-class>
			com.focustech.oss2008.web.servlet.ShowValidateImage
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowValidateImage</servlet-name>
		<url-pattern>/validateimage/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>remoting_hessian</servlet-name>
		<url-pattern>/remoting/*</url-pattern>
	</servlet-mapping>
	<!-- =================================================================== -->
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.ui</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>XlsFile</servlet-name>
		<url-pattern>/downloadXlsFile</url-pattern>
	</servlet-mapping>
	<!-- =================================================================== -->

	<!-- JNDI config -->
	<resource-ref>
		<res-ref-name>jdbc/OssDatabase</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<jsp-config>
		<taglib>
			<taglib-uri>http://www.springframework.org/tags/form</taglib-uri>
			<taglib-location>/WEB-INF/tags/spring-form.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>
